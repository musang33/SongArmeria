{{>common/header}}



<h1>Update</h1>
<div class="col-md-12">
    <form>
        <div class="form-group">
            <label for="title">Id</label>
            <input type="text" class="form-control" id="id" value="{{post.id}}" readonly>
        </div>
        <div class="form-group">
            <label for="title">제목</label>
            <input type="text" class="form-control" id="title" value="{{post.title}}">
        </div>
        <div class="form-group">
            <label for="content">내용</label>
            <textarea class="form-control" id="content" placeholder="내용">{{post.content}}</textarea>
        </div>
        <div class="form-group">
            <label for="title">마지막 수정일시</label>
            <input type="text" class="form-control" id="title" value="{{post.lastModifiedAt}}" readonly>
        </div>
    </form>

    <a href="/" class="btn btn-secondary" >취소</a>
    <button id="btn-update" type="button" class="btn btn-primary">수정</button>
    <button id="btn-delete" type="button" class="btn btn-danger">삭제</button>
</div>



{{>common/footer}}